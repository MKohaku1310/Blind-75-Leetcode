class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        unordered_set<int> s(nums.begin(), nums.end());
        int max1 = 0;

        for (auto n : s) {
            if (!s.count(n - 1)) {
                int cur = n;
                int cnt = 1;

                while (s.count(cur + 1)) {
                    cur++;
                    cnt++;
                }
                max1 = max(max1, cnt);
            }
        }
        return max1;
    }
};
